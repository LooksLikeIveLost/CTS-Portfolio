<div class="app-card-container">
  <div class="card">
    <h1>About</h1>
    
    <hr>
    
    <div class="row">
      <div class="col-md-4">
        
        <%= image_tag "Top10StrongestAnimeCharactersOfAllTime.jpg", width: 300, alt: "Profile Image", class: 'profile-img' %>
        
        <div class="skill">
          <% @skills.each do |skill| %>
          <div class="singular">
            <h4><%= skill.title %></h4>
            <div class="progress">
              <div 
                class="progress-bar progress-bar-striped bg-warning"
                role="progressbar"
                aria-valuenow="<%= skill.percent_utilized %>"
                aria-valuemax="100"
                style="width: <%= skill.percent_utilized %>%"
              >
                
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      
      <div class="col-md-8">
        <p>Oh hello. This is an about page.</p>
        
         <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobs"
            aria-expanded="false"
            aria-controler="jobs"
          >
            Jobs
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
            Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobs">
            <div class="card card-block">
              Job 1
            </div>
            <div class="card card-block">
              Job 2
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card card-block">
              School 1
            </div>
            <div class="card card-block">
              School 2
            </div>
            <div class="card card-block">
              School 3
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>

